<h1>Listing events</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Time</th>
    <th>Location</th>
    <th>Event url</th>
    <th>Contact</th>
    <th>Admission</th>
    <th>Categories</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.description %></td>
    <td><%= event.time %></td>
    <td><%= event.location %></td>
    <td><%= event.event_url %></td>
    <td><%= event.contact %></td>
    <td><%= event.admission %></td>
    <td><%= event.categories %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

