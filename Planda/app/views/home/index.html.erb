<!DOCTYPE html>
<html>
  <head>
		<%= stylesheet_link_tag "fullcalendar.css" %>
		<%= stylesheet_link_tag "fullcalendar.print.css" %>
		<%= javascript_include_tag 'jquery-1.5.2.min.js' %>
		<%= javascript_include_tag 'jquery-ui-1.8.11.custom.min.js' %>
		<%= javascript_include_tag 'fullcalendar.min.js' %>

		<script>
			$("#box").click(function() {
				$("box1-expanded").toggle();
			});
		</script>

		<style>
  			#box { 
				position:relative; 
				top: 20px;
				left: -170px; 
				width: 150px; 
				height: 150px; 
				padding: 0.5em; 
			}
			#box1-expanded {
				position:relative;
				width: 500px;
				height: 500px;
				padding: 0.5em;
				top: -21em;
			}
			#box2 { 
				position:relative; 
				left: 20px; 
				top: -143px; 
				width: 150px; 
				height: 150px; 
				padding: 0.5em; 
				border-radius-top-left: 10px;
			}
			#box3 { 
				position:relative;
				top: -25em;
				left: 210px;
				width: 150px; 
				height: 150px; 
				padding: 0.5em; 
			}
			#thumbs-up {
				width: 60px;
				height: 60px;
				position:relative;
			}
			
			#thumbs-down {
				width: 60px;
				height: 60px;
				position:relative;
				top: 200px;
				right: 25px;
			}
			
			#event-title {
				width: 500px;
				height: 25px;
			}
			
			#event-info {
			
			}
			
			#event-image {
				width: 60px;
				height: 60px;
				position:relative;
				top: 10px;
				right: 10px
			}
		</style>
	</head>
	<body>
		<div id="events-container">
			<div id="arrow-left"> </div>
			<div id="box" style="border: 2px solid #000000;">
				<p>Event 1</p>
			</div>
			<div id="box2" style="border: 2px solid #000000;">
				<p>Event 2</p>
			</div>
			<div id="box3" style="border: 2px solid #000000;">
				<p>Event 3</p>
			</div>
			<div id="arrow-right"> </div>
			<div id="box1-expanded" style="border: 2px solid #000000;">
			<div id="event-title" style="border: 1px solid #000000;">
				<p> Event 1 title </p>			
			</div>
			<div id="event-info"></div>
			<div id="event-image">
				<img src="/images/judo.png"/>
			</div>					
		</div>
	</body>
			<div id="thumbs-up">
				<img src="thumbsup.png"/>
			</div>
			<div id="thumbs-down">
				<img src="thumbsdown.png"/>
			</div>	
</html>


