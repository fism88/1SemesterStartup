<!DOCTYPE html>
<html>
  <head>
		<%= javascript_include_tag 'jquery-1.5.2.min.js' %>
		<%= javascript_include_tag 'jquery-ui-1.8.11.custom.min.js' %>

		<script type='text/javascript'>
			$(document).ready(function() {
				$("#box1-expanded").hide();
				$("#box2-expanded").hide();
				$("#box3-expanded").hide();
				$("#thumbs-down").hide();
				$("#thumbs-up").hide();
	
				$('#box1').click(function() {
					$("#box2-expanded").hide();
					$("#box3-expanded").hide();
					$("#box1-expanded").show('slow');
					$("#thumbs-down").show('fast');
					$("#thumbs-up").show('fast');			
				});
				$('#box2').click(function() {
					$("#box1-expanded").hide();
					$("#box3-expanded").hide();
					$("#box2-expanded").show('slow');
					$("#thumbs-down").show();
					$("#thumbs-up").show();				
				});
				$('#box3').click(function() {
					$("#box1-expanded").hide();
					$("#box2-expanded").hide();
					$("#box3-expanded").show('slow');
					$("#thumbs-down").show();
					$("#thumbs-up").show();				
				});
			});
		</script>

		<style>
			#box-case {
				width: 600px;
				height: 180px;
				position:relative;
				top: 20px;
				background-color:#000033;
				-moz-border-radius: 15px;
				border-radius: 15px;
			}
  			#box1 {  
				width: 150px; 
				height: 150px; 
				background-color:white; 
				opacity: .55;
				float: left;
				position:relative;
				top: 15px;
				left: 30px;
				-moz-border-radius: 15px;
				border-radius: 15px;
			}
			#box1-expanded {
				position:relative;
				width: 500px;
				height: 500px;
				padding: 0.5em;
				top: 20px;
				-moz-border-radius: 15px;
				border-radius: 15px;
			}
			#box2-expanded {
				position:relative;
				width: 500px;
				height: 500px;
				padding: 0.5em;
				top: 20px;
				-moz-border-radius: 15px;
				border-radius: 15px;
			}
			#box3-expanded {
				position:relative;
				width: 500px;
				height: 500px;
				padding: 0.5em;
				top: 20px;
				-moz-border-radius: 15px;
				border-radius: 15px;
			}
			#box2 { 
				width: 150px; 
				height: 150px; 
				background-color:white; 
				opacity: .55;
				position:relative;
				float:center;
				top: 15px;
				-moz-border-radius: 15px;
				border-radius: 15px;
			}
			#box3 { 
				width: 150px; 
				height: 150px; 
				background-color:white; 
				opacity: .55;
				float:right;
				position:relative;
				top: -135px;
				left: -30px;
				-moz-border-radius: 15px;
				border-radius: 15px;
			}
			#box1:hover {
				opacity:1;			
			}
			#box2:hover {
				opacity:1;			
			}
			#box3:hover {
				opacity:1;			
			}
			#thumbs-up {
				width: 60px;
				height: 60px;
				position:relative;
				top: -250px;
				left: -200px;
			}
			
			#thumbs-down {
				width: 60px;
				height: 60px;
				position:relative;
				top: -310px;
				left: -140px;
			}
			
			#event-title {
				width: 500px;
				height: 25px;
				border-radius:25px;
				-moz-border-radius: 15px;
				border-radius: 15px;
			}
			
			#event-info {
			
			}
			
			#event-image {
				width: 60px;
				height: 60px;
				position:relative;
				top: 10px;
				right: 10px
			}
			#topContent {
				height:300px;		
			}
			#bottomDiv {
				position:relative;
				top:-100px;			
			}
		</style>
	</head>
	<body>
		<div id="events-container">
			<div id="topContent">			
				<div id="arrow-left"> </div>
				<div id="box-case">
					<div id="box1">
						<p>Event 1</p>
						<ul>
							<li>Time: 10am-12pm</li>
							<li>Location: GSB 3.106</li>
							<li>Short description</li>
					</div>
					<div id="box2">
						<p>Event 2</p>
					</div>
					<div id="box3">
						<p>Event 3</p>
					</div>
				</div>
				<div id="arrow-right"> </div>
			</div>	
	<div id="bottomDiv"		
			<div id="box1-expanded" style="border: 2px solid #000000;">
				<div id="event-title" style="border: 1px solid #000000;">
					<p> Event 1 title </p>			
				</div>
				<div id="event-info"></div>
					<div id="event-image">
				<%= image_tag "judo.png" %>
					</div>					
			</div>
			<div id="box2-expanded" style="border: 2px solid #000000;">
				<div id="event-title" style="border: 1px solid #000000;">
					<p> Event 2 title </p>			
				</div>
				<div id="event-info"></div>
					<div id="event-image">
				<%= image_tag "judo.png" %>
					</div>					
			</div>
			<div id="box3-expanded" style="border: 2px solid #000000;">
				<div id="event-title" style="border: 1px solid #000000;">
					<p> Event 3 title </p>			
				</div>
				<div id="event-info"></div>
					<div id="event-image">
				<%= image_tag "judo.png" %>
					</div>					
			</div>	
	</div>		
	</body>
			<div id="thumbs">
				<div id="thumbs-up">
					<%= image_tag "thumbsup.png" %>
				</div>
				<div id="thumbs-down">
					<%= image_tag "thumbsdown.png" %>
				</div>	
			</div>
</html>


