<!DOCTYPE html>
<html>
  <head>
		<%= javascript_include_tag 'jquery-1.5.2.min.js' %>
		<%= javascript_include_tag 'jquery-ui-1.8.11.custom.min.js' %>

		<script type='text/javascript'>
			$(document).ready(function() {
				$("#box1-expanded").hide();
				$("#box2-expanded").hide();
				$("#box3-expanded").hide();
				$("#thumbs-down").hide();
				$("#thumbs-up").hide();
				$("#calendar-button").hide();
	
				$('#box1').click(function() {
					$("#box2-expanded").hide();
					$("#box3-expanded").hide();
					$("#box1-expanded").show('slow');
					$("#calendar-button").show();
					$("#thumbs-down").show();
					$("#thumbs-up").show();			
				});
				$('#box2').click(function() {
					$("#box1-expanded").hide();
					$("#box3-expanded").hide();
					$("#box2-expanded").show('slow');
					$("#thumbs-down").show();
					$("#thumbs-up").show();				
				});
				$('#box3').click(function() {
					$("#box1-expanded").hide();
					$("#box2-expanded").hide();
					$("#box3-expanded").show('slow');
					$("#thumbs-down").show();
					$("#thumbs-up").show();				
				});
			});
		</script>

